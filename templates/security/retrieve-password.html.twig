{% extends 'commune-show.html.twig' %}
{% block title %}Mot de passe oublié{% endblock %}

{% block stylesheets %}
    {#<link rel="stylesheet" type="text/css" href="{{asset('assets/css/commune.css')}}">#}
    <style>
        .navbar-light .navbar-nav .nav-link {
            color: #444;
            border-bottom: 2px solid #fff;
        }

        .navbar-light .navbar-nav .nav-link:focus, .navbar-light .navbar-nav .nav-link:hover {
            border-bottom: 2px solid #5070B5;
        }
       
       .bg-warning {
            background-color: #FFD470 !important;
        }
        .bg-info {
            background-color: #5070B5 !important;
        }
        .bg-danger {
            background-color: #FF9166 !important;
        }
        .btn-danger {
            background-color: #FF9166 !important;
            border-color: #FF9166 !important;
        }
        .btn-success {
            background-color: #58CCB6 !important;
            border-color: #58CCB6 !important;
        }
        .btn-warning {
            background-color: #FFD470 !important;
            border-color: #FFD470 !important;
        }
        #main {
            min-height: 85vh;
        }
        
        textarea[disabled], label[for="user_user_adresse"], label[for="user_user_complement_adresse"], label[for="user_user_commune"], label[for="user_user_postal_code"], label[for="user_user_pays"], label[for="user_user_email"], label[for="user_user_nom"], label[for="user_user_prenom"], label[for="user_user_telephone"], label[for="user_username"], label[for="user_user_email"] {
            display: none;
        }

    </style>
{% endblock %}
{% block header %}
{% endblock %}
{% block main %}

<h1 class="mt-5 pt-3 mb-4 text-center display-3 text-dark" id="titreinscription">Récupérez votre mot de passe</h1>

<div class="container-fluid">
    <div class="row justify-content-center align-items-center h-100" >
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <div class="row my-2 d-flex justify-content-center">
                {% for label, messages in app.flashes %}
                    <div class="alert text-center alert-{{ label }}">
                        {% for message in messages %}
                            {{ message }}
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% if email == null %}
<div class="container">
    {{ form_start(mailForm)}}
    {{ form_end(mailForm)}}
</div>
{%endif%}

{% if not email == null %}
<div class="container">
    {{ form_start(newForm)}}
    <div class="col-md-6">
        <div class="form-group">
            Mot de passe :<small style="font-style:italic; color:red;"> Obligatoire</small>{{ form_row(newForm.password.first)}}
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            Vérifiez le mot de passe :<small style="font-style:italic; color:red;"> Obligatoire</small>{{ form_row(newForm.password.second)}} 
        </div>
    </div>
    <input id="email" name="email" type="hidden" value="{{email}}"></input>
    {{ form_end(newForm)}}
</div>
{%endif%}


{% endblock %}



