{% extends 'commune.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{asset('assets/inscription.css')}}">
{% endblock %}

{% block header %}
{% endblock %}

{% block main %}

<h1 class="mt-5 mb-4 text-center display-3 text-dark" id="titreinscription">Connexion</h1>

<div class="container-fluid h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <form class="border border-secondary border-2 rounded pt-4 pl-4 pr-4 pb-2 mb-4">
                <p class="text-center">Connectez-vous pour gérer la déclaration de vos meublés</p>
                <div class="form-group">
                    {{ form_widget(form.user_email)}}
                </div>
                <div class="form-group">
                    {{ form_widget(form.password)}}
                </div>
                <div class="form-group text-center">
                    {{ form_widget(form.connecter)}}
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}